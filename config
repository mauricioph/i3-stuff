for_window [class="I3-exit" instance="i3-exit"] floating enable
for_window [title="Shutdown"] floating enable


bindsym $mod+esc exec scrot /tmp/img.png

set $Locker i3lock && sleep 1
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

smart_gaps on
gaps inner 20
gaps outer 5

bindsym $mod+Pause mode "$mode_system"

bar { font pango:monospace 8, FontAwesome 8
      status_command /home/mauricio/.config/i3/bumblebee-status/bumblebee-status -m redshift cpu sensors battery nic datetime -p time.format="%H:%M:%S" -t tron
# i3blocks -c ~/.config/i3/i3blocks.conf tray_output primary # battery cpu sensors nic were in bumblebee modules

colors {
		background $bg-color
	    	separator #757575
		#                  border             background         text
		focused_workspace  $bg-color          $bg-color          $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}

